<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/css")
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="clear">
        &nbsp;</div>
    <!-- Start: page-top-outer -->
    <div id="page-top-outer">
        <!-- Start: page-top -->
        <div id="page-top">
            <!-- start logo -->
            <div id="logo">
                <a href="">
                    <img src="/images/shared/logo.png" width="156" height="40" alt="" /></a>
            </div>
            <!-- end logo -->
            <div class="clear">
            </div>
        </div>
        <!-- End: page-top -->
    </div>
    <!-- End: page-top-outer -->
    <div class="clear">
        &nbsp;</div>
    <!--  start nav-outer-repeat................................................................................................. START -->
    <div class="nav-outer-repeat">
        <!--  start nav-outer -->
        <div class="nav-outer">
            <!-- start nav-right -->
            <div id="nav-right">
                <div class="nav-divider">
                    &nbsp;</div>
                <div class="showhide-account">
                    <a href="">@User.Identity.Name</a></div>
                <div class="nav-divider">
                    &nbsp;</div>
                <div class="logout-account">
                    @Html.ActionLink("Выйти", "LogOff", "Account")</div>
                <div class="clear">
                    &nbsp;</div>
            </div>
            <!-- end nav-right -->
            
            <!--  start nav ...................................................................................................... -->
            @{ var currentAction = (string) ViewContext.Controller.ValueProvider.GetValue("action").RawValue;}
            
            @{
                var currentController = (string) ViewContext.Controller.ValueProvider.GetValue("controller").RawValue;
                var managementPageActive = currentController == "Customer"
                    || currentController == "Administration" 
                    || currentController == "BaseActive"
                    || currentController == "Ticker";
            }

            <div class="nav">
                <div class="table">
                    <ul class="@if (managementPageActive){<text>current</text>} else {<text>select</text>}">
                        <li><a href="#nogo"><b>Менеджмент</b><!--[if IE 7]><!--></a><!--<![endif]-->
                            <!--[if lte IE 6]><table><tr><td><![endif]-->
                            <div class="select_sub show">
                                <ul class="sub">
                                    <li>@if (currentAction == "GetServerInstances")
                                            {<text><a class="sub_current" href="javascript:void(0);">Клиенты</a></text>}
                                        else    
                                            {@Html.ActionLink("Клиенты", "GetServerInstances", "Customer")
                                            }
                                    </li>
                                    <li>@if (currentAction == "GetAdministratorPage")
                                        {<text><a class="sub_current" href="javascript:void(0);">Администрирование</a></text>}
                                        else    
                                        {@Html.ActionLink("Администрирование", "GetAdministratorPage", "Administration")
                                        }
                                    </li>
                                </ul>
                            </div>
                            <!--[if lte IE 6]></td></tr></table></a><![endif]-->
                        </li>
                    </ul>

                    <div class="nav-divider">
                        &nbsp;</div>
                    <div class="clear">
                    </div>
                </div>
                <div class="clear">
                </div>
            </div>
            <!--  start nav -->
            

        </div>
        <div class="clear">
        </div>
        <!--  start nav-outer -->
    </div>
    <!--  start nav-outer-repeat................................................... END -->
    <div class="clear">
    </div>
 
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>


    <div class="clear">
        &nbsp;</div>
    <!-- start footer -->
    <div id="footer">
        <!--  start footer-left -->
        <div id="footer-left">
            TRADE# &copy; All rights reserved.</div>
        <!--  end footer-left -->
        <div class="clear">
            &nbsp;</div>
    </div>
    
    <!-- end footer -->
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>